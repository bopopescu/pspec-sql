<?xml version="1.0" encoding="UTF-8"?>

<privacy-policy default-ruling="allow"
	xmlns="http://www.example.org/privacy"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.example.org/privacy ../src/privacy.xsd">
	<policy-information id="school-policy">
		<issuer>
			<name>luochen</name>
			<organization>Tsinghua</organization>
			<e-mail>luochen01@vip.qq.com</e-mail>
			<address>Tsinghua</address>
			<country>China</country>
		</issuer>
	</policy-information>
	
	<vocabulary-ref location="test/example-vocabulary.xml">
		<user-category-container refid="school-users"/>
		<data-category-container refid="school-data" />
	</vocabulary-ref>
	<rules>
		<allow id="allow-teacher-gpa">
			<user-category-ref refid="teacher"/>
			<data-association>
				<data-category-ref refid="student-id">
					<all/>
				</data-category-ref>
				<data-category-ref refid="gpa">
					<all/>
				</data-category-ref>
			</data-association>
		</allow>
		
		<restrict id="restrict-gpa">
			<user-category-ref refid="employee"/>
			<data-association>
				<data-category-ref refid="student-id">
					<all/>
				</data-category-ref>
				<data-category-ref refid="gpa">
					<select/>
				</data-category-ref>
			</data-association>
			<restriction>
				<desensitize>
					<data-category-ref refid="gpa"/>
				</desensitize>
			</restriction>
		</restrict>
	</rules>
	
	
</privacy-policy>
	