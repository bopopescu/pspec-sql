<?xml version="1.0" encoding="UTF-8"?>

<privacy-policy default-ruling="allow"
	xmlns="http://www.example.org/privacy"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.example.org/privacy privacy.xsd">
	<policy-information id="school-policy">
		<issuer>
			<name>luochen</name>
			<organization>Tsinghua</organization>
			<e-mail>luochen01@vip.qq.com</e-mail>
			<address>Tsinghua</address>
			<country>China</country>
		</issuer>
	</policy-information>
	
	<vocabulary-ref base="example-vocabulary.xml">
		<user-categories ref="school-users"/>
		<data-categories ref="school-data" />
	</vocabulary-ref>
	<rules>
		<allow id="allow-teacher-gpa">
			<user-category refid="teacher"/>
			<action>
				<all/>
			</action>
			<data-association>
				<data-category refid="student-id"/>
				<data-category refid="gpa"/>
			</data-association>
		</allow>
		
		<restrict id="restrict-gpa">
			<user-category refid="employee"/>
			<action>
				<select/>
				<equal-test/>
			</action>
			<data-association>
				<data-category refid="student-id"/>
				<data-category refid="gpa"/>
			</data-association>
			<restriction>
				<desensitize>
					<data-category refid="gpa"/>
				</desensitize>
			</restriction>
		</restrict>
	</rules>
	
	
</privacy-policy>
	