<?xml version="1.0" encoding="UTF-8"?>
<privacy-policy xmlns="http://www.example.org/privacy"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.example.org/privacy ../res/privacy.xsd">
	<policy-information id="tpcds-policy">
		<issuer>
			<name>Luo Chen</name>
			<organization>Tsinghua University</organization>
			<e-mail>luochen01@vip.qq.com</e-mail>
			<address>Beijing</address>
			<country>China</country>
		</issuer>
	</policy-information>
	<vocabulary-ref location="res/spark-vocab.xml">
		<user-category-container refid="default-user" />
		<data-category-container refid="tpcds-data" />
	</vocabulary-ref>

	<privacy-parameters>
		<global-budget>
			<user-category-ref refid="analyst" budget="10"></user-category-ref>
		</global-budget>
		<!-- with probability (greater than) 0.9, the noise ratio should within 
			0.1 w.r.t. the real answer -->
		<accuracy>
			<probability>0.9</probability>
			<noise-ratio>0.1</noise-ratio>
		</accuracy>
	</privacy-parameters>
	<rules>
		<rule id="rule123">
			<user-category-ref refid="analyst"></user-category-ref>
			<data-category-ref refid="email" action="all" />
			<data-category-ref refid="name" action="all"></data-category-ref>
			<data-category-ref refid="street" action="all"></data-category-ref>
			<restriction>
				<forbid></forbid>
			</restriction>
		</rule>

		<rule id="rule4">
			<user-category-ref refid="analyst"></user-category-ref>
			<data-association>
				<data-category-ref refid="birth" action="all"></data-category-ref>
				<data-category-ref refid="address" action="all"></data-category-ref>
				<data-category-ref refid="gender" action="all"></data-category-ref>
			</data-association>
			<restriction>
				<forbid></forbid>
			</restriction>
		</rule>

		<rule id="rule5">
			<user-category-ref refid="analyst"></user-category-ref>
			<data-association>
				<data-category-ref refid="birth" action="all"></data-category-ref>
				<data-category-ref refid="address" action="all"></data-category-ref>
				<data-category-ref refid="marital" action="all"></data-category-ref>
			</data-association>
			<restriction>
				<forbid></forbid>
			</restriction>
		</rule>

		<rule id="rule6">
			<user-category-ref refid="analyst"></user-category-ref>
			<data-association>
				<data-category-ref refid="birth" action="all"></data-category-ref>
				<data-category-ref refid="address" action="all"></data-category-ref>
				<data-category-ref refid="education" action="all"></data-category-ref>
			</data-association>
			<restriction>
				<forbid></forbid>
			</restriction>
		</rule>

		<rule id="rule7">
			<user-category-ref refid="analyst"></user-category-ref>
			<data-association>
				<data-category-ref refid="f_name" action="all"></data-category-ref>
				<data-category-ref refid="l_name" action="all"></data-category-ref>
			</data-association>
			<restriction>
				<forbid></forbid>
			</restriction>
		</rule>



		<rule id="rule9">
			<user-category-ref refid="analyst"></user-category-ref>
			<data-association>
				<data-category-ref refid="b_day" action="all"></data-category-ref>
				<data-category-ref refid="b_month" action="all"></data-category-ref>
				<data-category-ref refid="b_year" action="all"></data-category-ref>
			</data-association>
			<restriction>
				<forbid></forbid>
			</restriction>
		</rule>

		<rule id="rule10">
			<user-category-ref refid="analyst"></user-category-ref>
			<data-category-ref refid="zip" action="all"></data-category-ref>
			<restriction>
				<desensitize>
					<operation>truncate</operation>
				</desensitize>
			</restriction>
		</rule>

		<rule id="rule11">
			<user-category-ref refid="analyst"></user-category-ref>
			<data-association>
				<data-category-ref refid="qi" action="all"></data-category-ref>
				<data-category-ref refid="vehicle" action="all"></data-category-ref>
			</data-association>
			<restriction>
				<desensitize>
					<data-category-ref refid="vehicle"></data-category-ref>
					<operation>isZero</operation>
				</desensitize>
			</restriction>
		</rule>

		<rule id="rule12">
			<user-category-ref refid="analyst"></user-category-ref>
			<data-association>
				<data-category-ref refid="qi" action="all"></data-category-ref>
				<data-category-ref refid="income" action="all"></data-category-ref>
			</data-association>
			<restriction>
				<desensitize>
					<data-category-ref refid="income"></data-category-ref>
					<operation>range</operation>
				</desensitize>
			</restriction>
		</rule>

		<rule id="rule13">
			<user-category-ref refid="analyst"></user-category-ref>
			<data-association>
				<data-category-ref refid="qi" action="all"></data-category-ref>
				<data-category-ref refid="price" action="all"></data-category-ref>
			</data-association>
			<restriction>
				<desensitize>
					<data-category-ref refid="price"></data-category-ref>
					<operation>sum</operation>
					<operation>count</operation>
					<operation>avg</operation>
					<operation>min</operation>
					<operation>max</operation>
				</desensitize>
			</restriction>
		</rule>
	</rules>
</privacy-policy>
