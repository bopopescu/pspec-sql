<?xml version="1.0" encoding="UTF-8"?>
<privacy-policy xmlns="http://www.example.org/privacy"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.example.org/privacy privacy.xsd">
	<policy-information id="store-policy">
		<issuer>
			<name>luochen</name>
			<organization>Tsinghua</organization>
			<e-mail>luochen01@vip.qq.com</e-mail>
			<address>Tsinghua</address>
			<country>China</country>
		</issuer>
	</policy-information>
	<vocabulary-ref location="tpc-ds/store_policy">
		<user-category-container refid="default-user" />
		<data-category-container refid="store-data" />
	</vocabulary-ref>
	<rules>
		<rule id="forbid_project">
			<user-category refid="app"></user-category>
			<data-category refid="ka" action="project"></data-category>
			<data-category refid="name" action="project"></data-category>
			<data-category refid="customer_suite" action="project"></data-category>
			<data-category refid="customer_sa" action="project"></data-category>
			<restriction>
				<forbid></forbid>
			</restriction>
		</rule>

		<rule id="forbid_name_customer_sa">
			<user-category refid="app"></user-category>
			<data-association>
				<data-category refid="name"></data-category>
				<data-category refid="customer_sa"></data-category>
			</data-association>
			<restriction>
				<forbid></forbid>
			</restriction>
		</rule>

		<rule id="forbid_ka_customer_sa">
			<user-category refid="app"></user-category>
			<data-association>
				<data-category refid="ka"></data-category>
				<data-category refid="customer_sa"></data-category>
			</data-association>
			<restriction>
				<forbid></forbid>
			</restriction>
		</rule>

		<rule id="forbid_ka_qi_project">
			<user-category refid="app"></user-category>
			<data-association>
				<data-category refid="ka"></data-category>
				<data-category refid="qi" action="project"></data-category>
			</data-association>
			<restriction>
				<forbid></forbid>
			</restriction>
		</rule>


		<rule id="truncate_customer_zip">
			<user-category refid="app"></user-category>
			<data-category refid="customer_zip"></data-category>
			<restriction>
				<desensitize>
					<UDF>truncate</UDF>
				</desensitize>
			</restriction>
		</rule>

		<rule id="substr_customer_suite">
			<user-category refid="app"></user-category>
			<data-category refid="customer_suite"></data-category>
			<restriction>
				<desensitize>
					<UDF>substr</UDF>
				</desensitize>
			</restriction>
		</rule>
		
		<rule id="agg_financial">
			<user-category refid="app"></user-category>
			<data-category refid="financial"></data-category>
			<restriction>
				<desensitize>
					<UDF>sum</UDF>
					<UDF>avg</UDF>
				</desensitize>
			</restriction>
		</rule>


	</rules>
</privacy-policy>
